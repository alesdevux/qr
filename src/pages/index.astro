---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="min-h-screen grid place-content-center">
    <div class="bg-white rounded-xl w-80 p-4 text-center space-y-4">
      <picture class="bg-blue-500">
        <img 
          src="/image-qr-code.png" 
          alt="qr code"
          class="rounded-lg overflow-hidden"
        >
      </picture>
      <h1 class="font-bold text-2xl">Improve your front-end skills by building projects</h1>
      <p class="text-base text-slate-500">
        Scan the QR code to visit Frontend Mentor and take your coding skills to the next level
      </p>
    </div>
  </main>
</Layout>
